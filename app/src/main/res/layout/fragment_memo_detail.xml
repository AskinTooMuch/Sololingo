<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper">

    <EditText
        android:id="@+id/edtNewMemoContent"
        android:layout_width="322dp"
        android:layout_height="560dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="39dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/en_noteContent"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNewMemoTitle" />

    <EditText
        android:id="@+id/edtNewMemoTitle"
        android:layout_width="322dp"
        android:layout_height="38dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="9dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/en_title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtNewMemoContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnNewMemoCancel"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ibtnNewMemoCancel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/ic_action_cancel"
        app:layout_constraintBottom_toTopOf="@+id/edtNewMemoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibtnNewMemoConfirm"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnNewMemoConfirm"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/ic_action_confirm"
        app:layout_constraintBottom_toTopOf="@+id/edtNewMemoTitle"
        app:layout_constraintEnd_toStartOf="@+id/ibtnNewMemoCancel"
        app:layout_constraintStart_toEndOf="@+id/ibtnNewMemoReturn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnNewMemoReturn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="680dp"
        android:background="@drawable/ic_action_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibtnNewMemoConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>